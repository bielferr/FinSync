{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "backend/dist",
    "rootDir": "backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["backend/src/**/*.ts", "backend/src/**/*.tsx", "backend/src/teste-chatbot.ts"],
  "exclude": ["node_modules", "backend/dist"]
}